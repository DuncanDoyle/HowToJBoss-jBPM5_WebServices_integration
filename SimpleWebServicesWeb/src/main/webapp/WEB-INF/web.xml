<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <display-name>Archetype Created Web Application</display-name>
 <servlet>
  <servlet-name>WorldServiceServlet</servlet-name>
  <servlet-class>org.jboss.ddoyle.howtojboss.worldservice.impl.SimpleWorldService</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>HelloServiceServlet</servlet-name>
  <servlet-class>org.jboss.ddoyle.howtojboss.helloservice.impl.SimpleHelloService</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>WorldServiceServlet</servlet-name>
  <url-pattern>/WorldService/*</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>HelloServiceServlet</servlet-name>
  <url-pattern>/HelloService/*</url-pattern>
 </servlet-mapping>
</web-app>
